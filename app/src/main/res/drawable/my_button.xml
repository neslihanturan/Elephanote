<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="-0" android:startColor="@color/colorPurpleSoft" android:endColor="@color/colorRedSoft" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorRedSoftDarker" />
            <solid android:color="@color/colorOrangePink"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:startColor="@color/colorRedSoft" android:endColor="@color/colorRedSoftDarker"  />
        </shape>
    </item>
</selector>